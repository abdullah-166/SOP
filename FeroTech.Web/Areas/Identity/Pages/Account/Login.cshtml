@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    // This makes the page standalone (no sidebar/navbar)
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FeroTech</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <style>
        /* 1. Full Height Background */
        html, body {
            height: 100%;
            width: 100%;
            margin: 0;
            padding: 0;
            background-color: #f4f6f9; /* Soft gray background */
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        }

        /* 2. Flex Container for Centering */
        .login-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        /* 3. The Card Styling */
        .login-card {
            width: 100%;
            max-width: 900px; /* Wide enough for 2 columns */
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            background: #fff;
        }

        .card-header {
            background-color: #fff;
            border-bottom: 1px solid #eee;
            padding: 2rem 1rem;
            text-align: center;
        }

        .login-logo {
            font-size: 2rem;
            font-weight: 800;
            color: #333;
            margin-bottom: 5px;
        }

        .card-body {
            padding: 3rem;
        }

        /* 4. Form Elements */
        .form-floating label {
            padding-left: 1.5rem; /* Make room for icons if added inside input */
        }

        .btn-primary {
            padding: 0.7rem 1.5rem;
            font-weight: 600;
        }

        /* 5. Divider for Desktop */
        .divider {
            border-left: 1px solid #eee;
            height: 100%;
        }

       
    </style>
</head>
<body>

    <div class="login-container">
        <div class="card login-card">

            <div class="card-header">
                <div class="login-logo"><i class="fa-solid fa-cube text-primary"></i> FeroTech</div>
                <p class="text-muted mb-0">Welcome back! Please sign in.</p>
            </div>

            <div class="card-body">
                <div class="row">

                    <div class="col-md-6 pe-md-4">
                        <form id="account" method="post">
                            <h5 class="mb-4 text-center text-md-start">Local Account</h5>

                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label">
                                    <i class="fa-solid fa-envelope me-2 text-secondary"></i> Email
                                </label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password" class="form-label">
                                    <i class="fa-solid fa-lock me-2 text-secondary"></i> Password
                                </label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="checkbox mb-3">
                                <label asp-for="Input.RememberMe" class="form-label user-select-none">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>

                            <div class="d-grid mb-3">
                                <button id="login-submit" type="submit" class="btn btn-primary btn-lg">
                                    Log in
                                </button>
                            </div>

                            <div class="text-center text-sm">
                                <p class="mb-1"><a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">Forgot your password?</a></p>
                                <p class="mb-1"><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">Register as a new user</a></p>
                                <p class="mb-0"><a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none">Resend email confirmation</a></p>
                            </div>
                        </form>
                    </div>

                    <div class="col-md-6 ps-md-4 mt-4 mt-md-0 border-start border-light">
                        <section>
                            <h5 class="mb-4 text-center text-md-start">External Service</h5>

                            @{
                                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                                {
                                    <div class="alert alert-light text-center border" role="alert">
                                        <p class="mb-0 text-muted small">
                                            No external authentication services configured.
                                            <br /><br />
                                            <i class="fa-solid fa-screwdriver-wrench fa-2x text-muted"></i>
                                        </p>
                                    </div>
                                }
                                else
                                {
                                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                        <div class="d-grid gap-2">
                                            @foreach (var provider in Model.ExternalLogins!)
                                            {
                                                <button type="submit" class="btn btn-outline-dark" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                                    @if (provider.DisplayName.ToLower().Contains("google"))
                                                    {
                                                        <i class="fa-brands fa-google text-danger me-2"></i>
                                                    }
                                                    else if (provider.DisplayName.ToLower().Contains("facebook"))
                                                    {

                                                        <i class="fa-brands fa-facebook text-primary me-2"></i>
                                                    }
                                                    else if (provider.DisplayName.ToLower().Contains("microsoft"))
                                                    {

                                                        <i class="fa-brands fa-microsoft text-success me-2"></i>
                                                    }
                                                    else
                                                    {

                                                        <i class="fa-solid fa-right-to-bracket me-2"></i>
                                                    }

                                                    Continue with @provider.DisplayName
                                                </button>
                                            }
                                        </div>
                                    </form>
                                }
                            }
                        </section>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <partial name="_ValidationScriptsPartial" />

</body>
</html>