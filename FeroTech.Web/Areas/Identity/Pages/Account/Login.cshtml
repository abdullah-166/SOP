@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - FeroTech</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        /* Login Container */
        .login-container {
            width: 100%;
            max-width: 420px;
            perspective: 1000px;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.25);
            border-radius: 24px;
            padding: 40px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.25);
            position: relative;
        }

        /* Header */
        .login-header {
            text-align: center;
            margin-bottom: 32px;
        }

            .login-header h2 {
                color: #fff;
                font-size: 2rem;
                font-weight: 700;
            }

            .login-header p {
                color: #e5e5e5;
                font-size: 1rem;
            }

        /* Form Input */
        .form-group {
            margin-bottom: 22px;
        }

        .input-wrapper {
            position: relative;
            width: 100%;
        }

            .input-wrapper input {
                width: 100%;
                padding: 16px;
                padding-top: 24px;
                border-radius: 14px;
                border: 1px solid rgba(255,255,255,0.3);
                background: rgba(255,255,255,0.15);
                color: white;
                font-size: 16px;
                outline: none;
                backdrop-filter: blur(10px);
            }

            .input-wrapper label {
                position: absolute;
                left: 16px;
                top: 10px;
                font-size: 13px;
                color: rgba(255,255,255,0.8);
                pointer-events: none;
            }

            /* Focus animation */
            .input-wrapper input:focus {
                border-color: #06b6d4;
                box-shadow: 0 0 10px rgba(6,182,212,0.3);
            }

        /* Checkbox */
        .remember-wrapper {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 12px;
        }

            .remember-wrapper label {
                color: rgba(255,255,255,0.9);
            }

        /* Button */
        .btn {
            width: 100%;
            background: linear-gradient(135deg, #6366f1 0%, #06b6d4 100%);
            border: none;
            padding: 16px;
            border-radius: 12px;
            color: white;
            font-weight: 600;
            cursor: pointer;
            font-size: 16px;
            margin-top: 10px;
        }

            .btn:hover {
                opacity: 0.85;
            }

        /* Divider */
        .divider {
            text-align: center;
            margin: 24px 0;
            color: rgba(255,255,255,0.8);
        }

            .divider::before,
            .divider::after {
                content: "";
                width: 30%;
                height: 1px;
                background: rgba(255,255,255,0.3);
                display: inline-block;
                vertical-align: middle;
            }

            .divider span {
                margin: 0 12px;
                font-size: 14px;
            }

        /* Social Login */
        .social-login {
            display: flex;
            gap: 12px;
        }

        .social-btn {
            flex: 1;
            background: rgba(255,255,255,0.15);
            border: 1px solid rgba(255,255,255,0.25);
            padding: 12px 16px;
            border-radius: 12px;
            color: white;
            display: flex;
            justify-content: center;
            gap: 8px;
            cursor: pointer;
        }

            .social-btn:hover {
                background: rgba(255,255,255,0.25);
            }

        /* Links */
        .signup-link {
            text-align: center;
            margin-top: 16px;
        }

            .signup-link a {
                color: #06b6d4;
                text-decoration: none;
            }

                .signup-link a:hover {
                    color: white;
                }

        .error-message {
            color: #ffb3b3;
            font-size: 13px;
            margin-top: 4px;
        }

    </style>

</head>

<body>

    <div class="login-container">
        <div class="login-card">

            <div class="login-header">
                <h2>Welcome Back</h2>
                <p>To Manage Your Asset</p>
            </div>

            <!-- FORM START -->
            <form method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Email -->
                <div class="form-group">
                    <div class="input-wrapper">
                        <input asp-for="Input.Email" autocomplete="username" required />
                        <label>Email Address</label>
                    </div>
                    <span asp-validation-for="Input.Email" class="error-message"></span>
                </div>

                <!-- Password -->
                <div class="form-group">
                    <div class="input-wrapper">
                        <input asp-for="Input.Password" type="password" autocomplete="current-password" required />
                        <label>Password</label>
                    </div>
                    <span asp-validation-for="Input.Password" class="error-message"></span>
                </div>

                <!-- Remember Me -->
                <div class="remember-wrapper">
                    <input asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                </div>

                <!-- Login Button -->
                <button type="submit" class="btn">Sign In</button>

            </form>
            <div class="social-login">
                @foreach (var provider in Model.ExternalLogins!)
                {
                    <button class="social-btn" type="submit" formaction="@Url.Page("./ExternalLogin", new { provider = provider.Name, returnUrl = Model.ReturnUrl })">
                        @provider.DisplayName
                    </button>
                }
            </div>
        </div>
    </div>

    <partial name="_ValidationScriptsPartial" />

</body>
</html>
