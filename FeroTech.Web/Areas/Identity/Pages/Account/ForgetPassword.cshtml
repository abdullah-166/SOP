@page
@model FeroTech.Web.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>

<div class="row justify-content-center">
    <div class="col-md-5">
        <form method="post" class="card p-4 shadow-sm">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">Enter your registered email</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-warning w-100 mb-3">Send Reset Link</button>

            <div class="text-center">
                <a asp-page="./Login">Back to Login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
